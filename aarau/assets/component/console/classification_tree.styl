.tree-select
  .current-node
    color #222222
    display block
    margin 0.81rem 0 0.68rem 0

  input
    border 1px solid #e1e1eb
    border-radius 0.22rem
    height 1.88em
    padding 0.22rem 0.66rem

  ul li
    list-style none
    span.mark
      font-weight bold
      min-width 0.72rem
      display inline-block
    span
      color #222222
      line-height 1.33em
      font-size 1.06em
      &.label
        background none
        &:hover
          background-color #ededed
