@import '../../css/shared/_colour.styl'

#metrics
  .filters
    margin 0.02rem 0 1.44rem 0

    .label
      display inline-block
      margin-right 0.66rem

    a
      display inline-block
      margin 0 0.36rem

  .charts
    margin-top 2.3rem

  .chart
    display inline-block
    height 12.6rem
    margin 1.22rem 0.02rem 1.22rem -1.2rem
    font-size 1em
    line-height 0.95

    .title
      margin-left 1.22rem

  .axis text
    font 9px

  .axis .tick text
    -moz-user-select none
    -khtml-user-select none
    -webkit-user-select none
    user-select none

  .axis path, .axis line
    fill none
    stroke #888888
    shape-rendering crispEdges

  .background.bar
    fill darken($paper2, 6%)

  .foreground.bar
    fill darken(#565656, 9%)

  .brush
    rect.extent
      fill red
      fill-opacity .120

    .selection
      fill #838383
      stroke none

  .reset
    padding 0 1rem
    color #888888
