@import './_colour.styl'

// additional decoration (overwrite) -- styr
.top.menu
  padding 0.28rem 0.94rem

.attached.header:first-child
  margin-top 0.02rem

.attached.box
  padding 1.26rem 1.19rem
  .form,
  .table
    width auto
    margin 1.36rem 1.29rem

.box
  .description
  .text
    margin-left 0.16rem

.small.text
  font-size 0.83em

.content .form
  .header
    margin-bottom 1.33rem

.embeded.box
  border none
  box-shadow none !important

.flat.button
  &.petit
    line-height 1.12em
    padding 0.31rem 0.416rem

.vertical.menu
  width 80%

div.message
  margin-top 1.29rem
  margin-bottom 1.63rem

div.list,
ul.list
  margin 0.96rem 0
  .item
    margin 0.48rem 0.41rem
    .content
      .header
        color $gray2
        font-weight bold
      .description
        color darken($gray1, 33%)
        font-size 0.95em
        margin 0.43rem 0 0.98rem 0


@media screen and (max-width: 768px)
  .vertical.menu
    width 100%
