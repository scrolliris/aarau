@import './shared/_colour.styl'

#standard
  .header h3
    display inline-block

  .row.landscape
    background-color $paper3
    &.user
      background-color $paper2

  .banner
    padding 2.66rem 1.86rem 1.66rem 1.86rem
    .primary.button
      margin 2.22rem 0

  .card
    .box
      border-top 4px solid darkgray
      .description
        margin 1.66rem 0

  .site-object
    .box
      border-color #f2f2f2
      .description
        margin 0
        padding 0.033rem 0

  .label.active
    color #f2f2f2
    background-color #888888

.pride
  font-size 90%
  color $gray1
