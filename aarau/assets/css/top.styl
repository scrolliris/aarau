@import './shared/_colour.styl'

#standard
  .header h3
    display inline-block

  .row.landscape
    background-color $paper3
    &.user
      background-color $paper2

  .banner
    padding 2.66rem 1.86rem 1.66rem 1.86rem
    .primary.button
      margin 2.22rem 0

  .card
    .box
      border-top 4px solid darkgray
      .description
        margin 1.66rem 0

  .label.active
    color #f2f2f2
    background-color #888888


.site
  .box
    border-color #f2f2f2
    .description
      margin 0
      padding 0.033rem 0

.site.box
  .project-namespace
    display inline-block
    margin 0.19rem 0 0.68rem 0.12rem

.publication.site.box
  .classification
    color #888888
  p.note
    margin 0.33rem 0
  p
    margin 0.11rem 0 0.32rem 0

.application.site.box
  p
    margin 0.11rem 0 0.32rem 0


.pride
  font-size 90%
  color $gray1
