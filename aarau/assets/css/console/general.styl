@import '../shared/_colour.styl'
@import '../shared/_sidebar.styl'
@import '../shared/_toolbar.styl'

#console
  // -- fixed-header option
  section.container.with-fixed-header
    height 100%
    overflow hidden

    main
      height calc(100% - (2.72rem * 2))
      overflow-y auto

  header,
  .inner-header,
  .sidebar .inner-header + .right.item
    height 2.72rem

  .top.menu
    min-height 2.72rem
    margin 0
    padding-top 0
    padding-left 0
    padding-right 0

    > a.item,
    > span.item
      display block

    // breadcrumbs
    > .item:first-child
      padding 0.42rem 0 0 1.31rem
      margin 0
      &:hover
        background none

  .top.menu,
  .toolbar
    .right.menu
      .item:first-child
        margin 0 0.82rem 0 0
    .right.menu .item,
    .right.item button
      &:hover
        background-color darken($paper2, 3%)

  .secondary.menu
    padding-left 0.02rem

  .breadcrumb
    display block
    padding-left 0.39rem
    .item.active
      background none
    > a.item,
    > span.item
      padding 0.541rem 0.264rem
    > a.item:hover
      background none !important
      text-decoration underline
    > .item:first-child
      padding-left 0

  section.container
    // header
    > .row .column-13
      padding-top 0
      padding-bottom 0

// sidebar
#console
  build-sidebar()

// toolbar
#console
  build-toolbar()

  .toolbar
    form.form
      padding-left 1.03rem
      padding-right 1.03rem

.dropdown-container
  .dropdown
    .header
      font-size 1.03rem
    .description
      color darken($gray1, 9%)

#console
  .label.draft
    background-color #ffecdb
    color $black0

  .label.wip
    background-color #a295d6
    color $black1

  .label.ready
    background-color #a8d695
    color $black1

  .label.scheduled
    background-color #f0ad4e
    color $black0

  .label.published
    background-color #a8d695
    color $black1

  .label.rejected
    background-color #d9534f
    color white

  .label.archived
    background-color #7f8c8d
    color white
