@import '../shared/_colour.styl'
@import '../shared/_sidebar.styl'
@import '../shared/_toolbar.styl'

#console
  header
    background-color #ffffff
  .top.menu
    margin 0
    margin-left 3.33rem
    padding-top 0
    padding-left 0
    padding-right 0
    > a.item,
    > span.item
      display block
    > .item:first-child
      padding-left 0
      &:hover
        background none
    .right.menu
      .item:first-child
        padding-right 1.62rem
        margin 0
  .secondary.menu
    padding-left 0.02rem

  .breadcrumb
    display block
    padding-left 0.39rem
    .item.active
      background none
    > a.item,
    > span.item
      padding 0.331rem 0.764rem
    > .item:first-child
      padding-left 0

  section.container
    padding 0.78rem 1.42rem
    // header
    > .row .column-13
      padding-top 0
      padding-bottom 0

// sidebar
#console
  build-sidebar()

// toolbar
#console
  build-toolbar()

  .toolbar
    form.form
      padding-left 1.03rem
      padding-right 1.03rem

.dropdown-container
  .dropdown
    .header
      font-size 1.03rem
    .description
      color darken($gray1, 9%)
